{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "typeRoots": ["./types", "./node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["dist", "node_modules"]
}
